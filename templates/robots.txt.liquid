# we use Shopify as our ecommerce platform
{%- comment -%}
# Caution! Please read https://help.shopify.com/en/manual/promoting-marketing/seo/editing-robots-txt before proceeding to make changes to this file.
{% endcomment %}
{% for group in robots.default_groups %}
  {{- group.user_agent -}}

  {% for rule in group.rules %}
    {{- rule -}}
  {% endfor %}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /discount/*' }}
  {%- endif -%}

  {% comment %}Added because these URLs are non-canonical{% endcomment %}
  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /collections/*/products/*' }}
  {%- endif -%}

  {% comment %}Added because for quite some time we used subfolders, but not anymore{% endcomment %}
  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /nb/*' }}
  {%- endif -%}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /es/*' }}
  {%- endif -%}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /fr/*' }}
  {%- endif -%}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /de/*' }}
  {%- endif -%}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /sv/*' }}
  {%- endif -%}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /en/*' }}
  {%- endif -%}
  {% comment %}Add because feeds like that are not necessary to crawl{% endcomment %}
  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /collections/*.atom' }}
  {%- endif -%}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /blogs/*.atom' }}
  {%- endif -%}



  {%- if group.sitemap != blank -%}
    {{ group.sitemap }}
  {%- endif -%}
{% endfor %}
