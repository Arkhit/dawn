    "16581501774a32acf8": {
      "type": "loop-article-img-txt",
      "blocks": {
        "81a12173-0171-4d1e-9fe4-12e07aac5bcf": {
          "type": "heading",
          "settings": {
            "heading": "Make it safe",
            "heading_size": "h2"
          }
        },
        "16581501770ad7ecad-1": {
          "type": "text",
          "settings": {
            "text": "<p>As Bas puts it, “we try to make it safe to give feedback.” Doing so fosters a culture of transparency and accountability, open discussions, and showing our people that we care.<\/p>",
            "text_style": "body"
          }
        },
        "b6d13c7c-ae41-4912-b692-bd1efbe55088": {
          "type": "button",
          "settings": {
