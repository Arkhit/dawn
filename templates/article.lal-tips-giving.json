    "166254426351b8cdff": {
      "type": "loop-article-img-txt",
      "blocks": {
        "166254426398103b88-0": {
          "type": "heading",
          "settings": {
            "heading": "#4: Remembering that feedback is a gift",
            "heading_size": "h2"
          }
        },
        "166254426398103b88-1": {
          "type": "text",
          "settings": {
            "text": "<p>Receiving feedback can be an emotionally triggering experience. <\/p><p>Not all of us are so good at processing criticism – no matter how kindly meant – and it’s important to acknowledge that it can be difficult.<\/p>",
            "text_style": "body"
          }
        }
      },
      "block_order": [
        "166254426398103b88-0",
        "166254426398103b88-1"
      ],
      "settings": {
        "image": "shopify:\/\/shop_images\/Tips_on_giving_feedback.jpg",
        "image_3": "shopify:\/\/shop_images\/Tips_on_giving_feedback.jpg",
