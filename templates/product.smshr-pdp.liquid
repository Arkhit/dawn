{{ 'splide-data.css' | asset_url | stylesheet_tag }}

<div class="">
  <div class="h-full flex flex-col gap-9 lg:gap-mega pb-base mb-mega">
    {% section 'product-detail' %}

    <div>
      {% section 'product-content' %}

      {% section 'pdp-related-products' %}

