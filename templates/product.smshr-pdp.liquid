{% layout 'theme' %}

{% comment %}
  {% schema %}
  {
    "name": "Payment Methods Template",
    "settings": [
      {
        "type": "header",
        "content": "Payment Methods"
      },
      {
        "type": "text",
        "id": "payment_method_1_name",
        "label": "Payment Method 1 Name"
      },
      {
        "type": "image_picker",
        "id": "payment_method_1_icon",
        "label": "Payment Method 1 Icon"
      },
      {
        "type": "text",
        "id": "payment_method_2_name",
        "label": "Payment Method 2 Name"
      },
      {
        "type": "image_picker",
        "id": "payment_method_2_icon",
        "label": "Payment Method 2 Icon"
      },
      {
        "type": "text",
        "id": "payment_method_3_name",
        "label": "Payment Method 3 Name"
      },
      {
        "type": "image_picker",
        "id": "payment_method_3_icon",
        "label": "Payment Method 3 Icon"
      }
    ],
    "presets": [
      {
        "name": "Default",
        "category": "Payment Methods"
      }
    ]
  }
  {% endschema %}
{% endcomment %}

<div class="">
  {% section 'main-product' %}
</div>

<style>
  .payment-methods {
    display: flex;
    gap: 20px;
  }
  .payment-method {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .payment-icon {
    max-width: 50px;
    max-height: 50px;
  }
  .payment-name {
    margin-top: 10px;
    font-size: 14px;
  }
</style>
