    "1660461811f60bede4": {
      "type": "image-with-text",
      "blocks": {
        "cb25bca6-14d4-41c3-813e-84a0cfad7cce": {
          "type": "heading",
          "settings": {
            "heading": "Public noise",
            "heading_size": "h2"
          }
        },
        "166046181176330408-1": {
          "type": "text",
          "settings": {
            "text": "<p>If the noise disturbance is coming from public sources such as loud construction work, then the best route to take is to file a complaint with your local government or the police.<\/p>",
            "text_style": "body"
          }
        }
      },
      "block_order": [
        "cb25bca6-14d4-41c3-813e-84a0cfad7cce",
