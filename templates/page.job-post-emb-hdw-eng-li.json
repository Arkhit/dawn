    "3e01014f-f53d-417b-9b8a-cc4b5f19e843": {
      "type": "image-with-text",
      "blocks": {
        "template--15832195596484__3e01014f-f53d-417b-9b8a-cc4b5f19e843-1676536363db51e92c-0": {
          "type": "heading",
