{% schema %}
{
  "name": "Collection Header",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Collection Header"
    }
  ]
}
{% endschema %}

<section class="collection-header">
  <div class="container">
    {% if collection %}
      <h1 class="collection-title">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="collection-description">
          {{ collection.description }}
        </div>
      {% endif %}
    {% else %}
      <p>{{ collection.metafields.custom.short_collection_description }}</p>
    {% endif %}
  </div>
</section>

<style>
  .collection-header {
    text-align: center;
    padding: 50px 20px;
  }
  .collection-title {
    font-size: 2rem;
    font-weight: bold;
  }
  .collection-description {
    margin-top: 10px;
    font-size: 1.1rem;
    color: #666;
  }
</style>
