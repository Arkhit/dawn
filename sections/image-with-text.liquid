        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
        },
        {
          "type": "color",
          "id": "button_bgcolor",
          "label": "button background color"
        },
        {
          "type": "color",
          "id": "button_txtcolor",
          "label": "button text color"
        }
      ]
