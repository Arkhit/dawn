{% comment %}theme-check-disable TemplateLength{% endcomment %}
{{ 'section-main-product.css' | asset_url | stylesheet_tag }}
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}

{{ 'faq.css' | asset_url | stylesheet_tag }}

<section class="page-width faq-SectionGrid color-{{ section.settings.color_scheme }} faq-mx-auto faq-my-25px">
  <div class="faq-SectionGrid-Narrow">
    <header class="faq-ff-heading faq-fs-7 faq-fs-lg-9 faq-lh-114 faq-fw-400 faq-ls-m148 faq-mt-13 faq-mb-7 faq-mb-md-8">
      {{ section.settings.heading | escape }}
    </header>
    <div>
      <div id="ProductInfo-{{ section.id }}" class="product__info-container{% if section.settings.enable_sticky_info %} product__info-container--sticky{% endif %}">
        {%- assign product_form_id = 'product-form-' | append: section.id -%}

        {%- for block in section.blocks -%}
            <div class="accordion" {{ block.shopify_attributes }}>
              <details>
                <summary>
                  <div class="summary__title">
                    <h2 class="h4 accordion__title faq-ff-heading faq-fw-500 faq-fs-2 faq-fs-lg-3 faq-lh-145 faq-pt-6">
                      {{ block.settings.question }}
                    </h2>
                  </div>
                  {% render 'icon-caret' %}
                </summary>
                <div class="accordion__content rte faq-ff-body faq-fw-300 faq-my-0 faq-fs-1 faq-lh-150 faq-ls-p024 faq-hyphen faq-pr-9 faq-pr-md-15 faq-pb-6" lang="de">
                  {{ block.settings.answer }}
                </div>
              </details>
              <div class="faq-h-0 faq-btw-05px faq-btc-e5 faq-bts-solid faq-mx-6">&nbsp;</div>
            </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ",
  "tag": "section",
  "class": "spaced-section",
  "blocks": [
    {
      "type": "text",
      "name": "question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Frage"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Antwort"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Ãœberschrift des Abschnitts"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Farbschema",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.footer.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.footer.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.footer.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.footer.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.footer.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.footer.settings.color_scheme.label"
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "settings": {
        "color_scheme": "background-1"
      }
    }
  ]
}
{% endschema %}
