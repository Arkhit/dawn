<link rel="stylesheet" href="{{ 'k-image-with-headers-styles.css' | asset_url }}" media="print" onload="this.media='all'">

{% assign background_color = "bg-" | append: section.settings.background_color %}
{% assign heading_color = "brand-" | append: section.settings.heading_color %}
{% assign heading_font_weight = "font-weight-" | append: section.settings.heading_font_weight %}
{% assign subheading_color = "brand-" | append: section.settings.subheading_color %}
{% assign subheading_font_weight = "font-weight-" | append: section.settings.subheading_font_weight %}

<section class="img-with-header {{background_color}}">
  <div class="headings-all page-width">
    {% if section.settings.heading != blank %}
      <h2 class="heading text-center {{heading_color}} {{heading_font_weight}}">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <h3 class="subheading text-center {{subheading_color}} {{subheading_font_weight}}">{{ section.settings.subheading }}</h3>
    {% endif %}
  </div>

{% style %}
  .img-with-header-hero-bg {
    background-image: url('{{ section.settings.image | img_url: 'master' }}');
    background-position: left top;
  }
  .img-with-header {
    padding:  {{ section.settings.section_padding }}px 0px;
    margin-top: {{ section.settings.section_margin_top }};
    margin-bottom: {{ section.settings.section_margin_bottom }};
  }
  .img-with-header .heading {
    font-size: {{ section.settings.heading_font_size }}px;
  }
  .img-with-header .subheading {
    font-size: {{ section.settings.subheading_font_size }}px;
    margin-bottom: 50px;
  }
  .img-with-header .alt-heading {
    font-size: {{ section.settings.alt_heading_font_size }}px;
  }
  .img-with-header-para {
    font-size: {{ section.settings.text_font_size }}px;
    padding:  {{ section.settings.para_padding }}px;
  }
{% endstyle %}

<div class="img-with-header-hero-container img-with-header-hero-bg">

  <div class="img-with-header-content-inner">
    <div class="img-with-header-wrapper">
      <div class="img-with-header-content">
        <span class="bullet">{{ section.settings.bullet3}}</span>
        <span class="bullet">{{ section.settings.bullet4}}</span>
        <span class="bullet">{{ section.settings.bullet5}}</span>
        <span class="bullet">{{ section.settings.bullet2}}</span>
        <span class="circle-bullet fadeInTop"><div class="circle"><img src="{{ section.settings.image_logo | img_url: 'master' }}" alt=""></div></span>
        {% if section.settings.bullet6 != blank %}
        <span class="bullet">{{ section.settings.bullet6}}</span>
        {% else %}
        <span class="blank-bullet"></span>
        {% endif %}
        <span class="bullet">{{ section.settings.bullet1}}</span>
      </div>

       <div class="img-with-header-content-alt">
        <div class="image-mobile-container"><img src="{{ section.settings.image_mobile | img_url: 'master' }}" alt=""></div>
        <ul>
          <li class="bullet-alt">{{ section.settings.bullet1}}</li>
          <li class="bullet-alt">{{ section.settings.bullet2}}</li>
          <li class="bullet-alt">{{ section.settings.bullet3}}</li>
          <li class="bullet-alt">{{ section.settings.bullet4}}</li>
          <li class="bullet-alt">{{ section.settings.bullet5}}</li>
          {% if section.settings.bullet6 != blank %}
        <li class="bullet-alt">{{ section.settings.bullet6}}</li>
        {% else %}
        <span class="blank-bullet"></span>
        {% endif %}
        </ul>
      </div>
    </div>
  </div>
</div>
  </section>
</div>

