{{ 'section-page-banner-7923216.css' | asset_url | stylesheet_tag }}

<div class="custom-section custom-section--page-banner" style="background-color: {{section.settings.bg_color}}">

    <div class="custom-section__bg-container"
        {% if section.settings.apply_general_settings %}
            style="{% unless settings.custom_page_banner_bg_image == blank %}background-image: url('{{settings.custom_page_banner_bg_image | image_url}}');{% endunless %}
                {% unless settings.custom_page_banner_bg_color == blank %}background-color: {{ settings.custom_page_banner_bg_color }};{% endunless %}
                {% if settings.custom_page_banner_bg_blend %}background-blend-mode: screen;{% endif %}"
        {% else %}
            style="{% unless section.settings.bg_image == blank %}background-image: url('{{section.settings.bg_image | image_url}}');{% endunless %}
                {% unless section.settings.bg_color == blank %}background-color: {{ section.settings.bg_color }};{% endunless %}
                {% if section.settings.bg_blendmode %}background-blend-mode: screen;{% endif %}"
        {% endif %}>
        
        <div class="page-width">
            <div class="custom-section--page-banner__content-wrapper">
                <div class="custom-section__header center">
                    {% if section.settings.title != blank %}
                        <h1 class="custom-section__header--title {% if section.settings.title_uppercase%}uppercase{% endif %}">{{ section.settings.title | escape }}</h1>
                    {% else %} 
                        <h1 class="custom-section__header--title {% if section.settings.title_uppercase%}uppercase{% endif %}">{{ page.title | escape }}</h1>
                    {% endif %}

                    {% if section.settings.subtitle != blank and section.settings.show_subtitle == true %}
                    <p class="custom-section__header--subtitle">{{ section.settings.subtitle | escape }}</p>
                    {% endif %}
                </div>
            </div>
        </div>

    </div>
</div>

{% schema %}
    {
        "name": "ðŸ”° Page Banner",
        "tag": "section",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "checkbox",
                "id": "title_uppercase",
                "label": "Uppercase",
                "default": false
            },
            {
                "type": "text",
                "id": "subtitle",
                "label": "Subtitle",
                "default": "Amet massa vitae tortor condimentum."
            },
            {
                "type": "checkbox",
                "id": "show_subtitle",
                "label": "Show Subtitle",
                "default": true
            },
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background Color"
            },
            {
                "type": "image_picker",
                "id": "bg_image",
                "label": "Background Image"
            },
            {
                "type": "checkbox",
                "id": "bg_blendmode",
                "label": "Enable Blending",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "apply_general_settings",
                "label": "Apply General Settings",
                "default": true
            }
        ],
        "presets":[
            {
                "name": "ðŸ”° Page Banner",
                "category": "Custom Section"
            } 
        ]
    }
{% endschema %}