                "id": "subtitle",
                "label": "Subtitle",
                "default": "Amet massa vitae tortor condimentum."
            },
            {
                "type": "checkbox",
                "id": "show_subtitle",
                "label": "Show Subtitle",
                "default": true
            },
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background Color"
            },
            {
                "type": "image_picker",
                "id": "bg_image",
                "label": "Background Image"
            },
            {
                "type": "checkbox",
                "id": "bg_blendmode",
                "label": "Enable Blending",
                "default": false
            }
        ],
        "presets":[
            {
