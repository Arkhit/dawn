<section class="banding">
  <article class="max">
    <a id="suggestions"></a>
    <h3>{{ section.settings.title }}</h3>
    <p>
      {{ section.settings.description }}
      <a href="{{ section.settings.link_url }}">{{ section.settings.link_text }}</a>
    </p>
    <ul class="popular">
      <li onclick="location.href='blend-full.html#step2';">
        <div class="bubble option3 complex next-option4">
          <span class="decorative"></span>
        </div>
        <div class="blurb">
          <h4>Rich &amp; Complex</h4>
          <p>You'll spend months trying to pick out all the subtle flavours.</p>
        </div>
      </li>
      <li onclick="location.href='blend-full.html#step2';">
        <div class="bubble option5 simple next-option1">
          <span class="decorative"></span>
        </div>
        <div class="blurb">
          <h4>Sherry Influence</h4>
          <p>Rich, full-bodied and with that distinctive velvety mouthfeel.</p>
        </div>
      </li>
      <li onclick="location.href='blend-full.html#step2';">
        <div class="bubble option1 medium next-option3">
          <span class="decorative"></span>
        </div>
        <div class="blurb">
          <h4>Sweet Tooth</h4>
          <p>Love sweet things? Toffee, caramel, honey, the lot!</p>
        </div>
      </li>
      <li onclick="location.href='blend-full#step2.html';">
        <div class="bubble option2 simple next-option5">
          <span class="decorative"></span>
        </div>
        <div class="blurb">
          <h4>Malt Lover</h4>
          <p>Don't like grain? No problem. Blended malt Scotch whisky.</p>
        </div>
      </li>
    </ul>
    <div class="find-image2">
      <img
        height="auto"
        width="auto"
        src="https://www.drewnotweird.com/whiskyblender/images/illustrations/lightbulb.svg"
        alt="A random dram"
      >
    </div>
  </article>
</section>

