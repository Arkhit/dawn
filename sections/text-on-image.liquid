{{ 'text-on-image.css' | asset_url | stylesheet_tag }}

{% liquid 
  case section.settings.font_color
    when 'text'
      assign color = settings.colors_text
    when 'background_1'
      assign color = settings.colors_background_1
    when 'background_2'
      assign color = settings.colors_background_2
    when 'solid_button_labels'
      assign color = settings.colors_solid_button_labels
    when 'outline_button_labels'
      assign color = settings.colors_outline_button_labels
    when 'accent_1'
      assign color = settings.colors_accent_1
    when 'accent_2'
      assign color = settings.colors_accent_2
    else
      assign color = settings.colors_text
    endcase
%}

<div class="ti-SectionGrid ti-pt-8 color-{{ section.settings.color_scheme }}">
  <div class="ti-SectionGrid-Wide">
    <div class="ti-ndesktopgrid ti-1col ti-2row ti-w-100p">
      <div class="ti-w-100p ti-col-1 ti-row-1-2">
        <img class="ti-w-100p ti-cover tiop-cc ti-h-100p" src="{{ section.settings.imageMobile | img_url: '800x' }}" alt="{{ section.settings.imageMobile.alt | escape }}" width="768" height="1470" loading="lazy">
      </div>
      <div class="ti-col-1 ti-row-2 ti-z-10">
        <h2 class="ti-ff-heading ti-ta-c ti-fs-7 ti-fw-500 ti-lh-30px ti-ls-m124 ti-w-85p ti-mx-auto ti-mxw-320px ti-mnw-300px ti-mb-5" style="color: {{ color }};">{{ section.settings.heading | escape }}</h2>
        <div class="ti-ff-body t1-fw-400 ti-lh-140 ti-ta-c ti-mx-auto ti-mb-5 ti-w-300px" style="color: {{ color }}">
          {{ section.settings.text }}
        </div>
        <div class="ti-ta-c">
          <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ section.settings.logo.alt | escape }}" width="183" height="56" loading="lazy" class="ti-w-183px">
        </div>
      </div>
    </div>
    <div class="ti-desktopgrid ti-w-100p ti-1col ti-2row-3-7">
      <div class="ti-w-100p ti-col-1 ti-row-1-2 ti-h-100p ti-mxh-550px">
        <img src="{{ section.settings.imageDesktop | img_url: '2000x' }}" alt="{{ section.settings.imageDesktop.alt | escape }}" width="1323" height="838" loading="lazy" class="ti-w-100p ti-h-100p ti-mxh-550px ti-cover ti-op-cc">
      </div>
      <div class="ti-col-1 ti-row-2 ti-z-10 ti-h-100p">
        <h2 class="ti-ta-c ti-ff-heading ti-fs-38px ti-fw-400 ti-lh-44px ti-ls-m124 ti-w-45p ti-mnw-400px ti-mxw-506px ti-mx-auto ti-mb-5" style="color: {{ color }}">
          {{ section.settings.heading | escape }}
        </h2>
        <div class="ti-ff-body ti-fs-4 ti-fw-300 ti-lh-28px ti-ta-c ti-w-60p ti-mx-auto ti-mxw-675px ti-mnw-415px ti-mb-11" style="color: {{ color }}">
          {{ section.settings.text }}
        </div>
        <div class="ti-ta-c">
          <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ section.settings.logo.alt | escape }}" width="239" height="69" loading="lazy" class="ti-w-269px">
        </div>
      </div>
    </div>
  </div>
</div>


