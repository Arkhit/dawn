{% style %}
.easel-header {
  background-color: #383838;
}

.easel-header__container {
  max-width: 1200px;
  margin: 0 auto;
}
{% endstyle %}

<div class="easel-header">
  <div class="easel-header__container">
    <div class="easel-header__logo-wrapper">
      Easel
    </div>
    <div class="easel-header__cta-wrapper">
      {% for block in section.blocks %}
        <a href="{{ block.settings.url | default: "#" }}" class="easel-header__nav-item">
          {{ block.settings.text }}
        </a>
      {% endfor %}
      {% if section.settings.orange_btn_text %}
        <a href="{{ section.settings.orange_btn_url }}" class="easel-header__orange-btn">
          {{ section.settings.orange_btn_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Easel Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "orange_btn_text",
      "label": "Orange Button Text"
    },
    {
      "type": "url",
      "id": "orange_btn_url",
      "label": "Orange Button URL"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "nav_item",
      "name": "Nav Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Easel Header"
    }
  ]

}
{% endschema %}
