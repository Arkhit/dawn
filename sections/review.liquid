    },
    {
      "type": "text",
      "id": "class_name",
      "label": "Class Name"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "画像"
        },
        {
          "type": "text",
          "id": "name",
