{% if section.settings.show_related %}
<div class="contents features">
<div class="features-box page-width">

<div class="features_title">
<h2>{{section.settings.heading}}</h2>
</div>
  <div class="features_image flex align-center justify-center">
    {% if section.settings.image_secondary %}
      <div style="width:{{section.settings.width_secondary}}%" class="features-secondary-image">
        <img src="{{section.settings.image_secondary | img_url:'1920x'}}" alt="">
      </div>
    {% endif %}
    <div style="width:{{section.settings.width}}%">
      <img src="{{section.settings.image | img_url:'1920x'}}" alt="">
    </div>
  </div>
  
  <div class="grid d-flex page-width">
    {% assign features = section.settings.text | newline_to_br | split: '<br />'%}
    {% for single_feature in features %}
    <div class="single-feature grid__item box medium-up--one-third">
      <p>â€¢ {{single_feature}}</p>
    </div>
    {%endfor%}
  </div>
</div>
</div>

{%endif%}

