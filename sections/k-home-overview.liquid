<script>

  $('.home-img-container span').mouseenter(function(e){
    let modalName = e.target.className.substring(5);
    $('.home-image-box .modal.' + modalName).removeClass('hide');
    gtag('event', 'homepage_detail_hover', { 'detail_card': modalName })
  }).mouseleave(function(e){
    let modalName = e.target.className.substring(5)
    $('.home-image-box .modal.' + modalName).addClass('hide');
  })
  
</script>