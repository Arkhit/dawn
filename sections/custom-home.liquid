 {{ 'bootstrap-grid.css' | asset_url | stylesheet_tag }}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

.home-promotions .image-overlay {
  position: relative;
  text-align: center;
  cursor: pointer;
}

@media (max-width: 750px) {
.home-promotions   .image-overlay:first-child {
  margin-bottom: 20px;
  }
  
.home-promotions    .image-overlay:second-child {
  margin-bottom: 0px;
  }
}

.home-promotions .image-overlay .heading {
background-color: #f9ca24;
    color: black;
    display: -webkit-inline-box;
    display: -ms-inline-flexbox;
    display: inline-flex;
    line-height: 1.1;
    margin: 0;
width: auto;
    text-transform: uppercase;
    -webkit-transform: skewX(-20deg);
    transform: skewX(-20deg);
font-weight: 900!important;
padding: 3px;
-webkit-box-shadow: 4px 4px 0px 0px rgba(0,0,0,0.2); 
box-shadow: 4px 4px 0px 0px rgba(0,0,0,0.2);
text-align: center;
}

.home-promotions .image-overlay .link {
background-color: white;
    color: black;
    display: -webkit-inline-box;
    display: -ms-inline-flexbox;
    display: inline-flex;
    line-height: 1.1;
    margin: 0;
width: auto;
    text-transform: uppercase;
    -webkit-transform: skewX(-20deg);
    transform: skewX(-20deg);
font-weight: 900!important;
padding: 6px;
margin-top: 10px;
text-decoration: none;
 font-family: 'Montserrat', sans-serif;
-webkit-box-shadow: 4px 4px 0px 0px rgba(0,0,0,0.2); 
box-shadow: 4px 4px 0px 0px rgba(0,0,0,0.2);
}

.home-promotions .image-overlay .bottom {
  position: absolute;
  left: 50%;
right: 50%;
  bottom: -30px;
width: 100%;
  transform: translate(-50%, -50%);
padding: 10px;
}

.home-promotions .image-overlay .promo-image-one {
  height: auto!important;
  width: 100%!important;
max-height: 300px;
}

{% endstyle %}

{% if section.settings.image1 != blank %}
<div class="page-width section-{{ section.id }}-padding">
  <div class="home-promotions">
     <div class="image-overlay">
          <img src="{{ section.settings.image1  | img_url: 'master' }}" class="promo-image-one" loading="lazy"/>
          <div class="bottom">
            <h2><span class="heading">{{section.settings.title1}}</span></h2>
             {% if section.settings.link1 != blank %} <a href="{{section.settings.link1}}" class="link">Shop Now</a>{%endif%}
          </div>
        </div>
  </div>
</div>
 {%endif%}



{% schema %}
  {
    "name": "Home Promotions - One",
    "settings": [
  

{
  "type": "image_picker",
  "id": "image1",
  "label": "Image 1"
},
  {
        "id": "title1",
        "type": "text",
        "label": "Text box heading",
        "default": "Title"
      },
{
          "type": "url",
          "id": "link1",
          "label": "Add link"
        },


    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }

    ],
    "presets": [
      {
        "name": "Home Promotions - One",
        "category": "image"
      }
    ]
  }
{% endschema %}

