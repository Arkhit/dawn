<link rel="stylesheet" href="{{ 'k-two-col-carousel-styles.css' | asset_url }}" media="print" onload="this.media='all'">

{% assign background_color = "bg-" | append: section.settings.background_color %}
{% assign background_color_one = "bg-" | append: section.settings.background_color_one %}
{% assign background_color_two = "bg-" | append: section.settings.background_color_two %}
{% assign heading_color = "brand-" | append: section.settings.heading_color %}
{% assign heading_font_weight = "font-weight-" | append: section.settings.heading_font_weight %}

<div class="two-col-carousel {{background_color}}">

  <div class="two-col-caro-box page-width">

    <div class="video-carousel {{background_color}}">
      <div class="video-caro-container">
        {% for block in section.blocks %}
          {% if block.type == "video" %}
          <div class="video-box">
            <a href="{{ block.settings.url }}" target="_blank">
              <div class="playIcon">
                <img src="{{ block.settings.image | img_url: 'master' }}" alt="video cover"/>
              </div>
            </a>
            <a href="{{ block.settings.url }}" target="_blank">{{block.settings.heading}}</a>
          </div>
        {% endif %}
        {% endfor %}
      </div>
    </div>
    
    <div class="blog-carousel {{background_color}}">
      <div class="blog-caro-container">
        {% for block in section.blocks %}
          {% if block.type == "blog" %}
          <div class="blog-box">
            <a href="{{ block.settings.url }}" target="_blank">
              <div class="playIcon">
                <img src="{{ block.settings.image | img_url: 'master' }}" alt="video cover"/>
              </div>
            </a>
            <a href="{{ block.settings.url }}" target="_blank">{{block.settings.heading}}</a>
          </div>
        {% endif %}
        {% endfor %}
      </div>
    </div>

  </div>


</div>

{% style %}
  .two-col-carousel {
    padding:  {{ section.settings.section_padding }}px 0px;
    margin-top: {{ section.settings.section_margin_top }}px;
    margin-bottom: {{ section.settings.section_margin_bottom }}px;
  }
  .two-col-carousel .heading {
    font-size: {{ section.settings.heading_font_size }}px;
  }
  .two-col-carousel .subheading {
    font-size: {{ section.settings.subheading_font_size }}px;
  }
{% endstyle %}

{% schema %}
  {
    "name": "Video Carousel",
    "settings": [
      {
        "type": "select",
        "id": "background_color",
        "label": "Background Color",
        "default": "white",
        "options": [
          {
            "value": "white",
            "label": "White"
          }, {
            "value": "lighter-blue",
            "label": "Blue"
          }
        ]
      }, {
        "id": "heading",
        "type": "text",
        "label": "Header",
        "default": "Title"
      }

    ],
    "blocks": [
      {
        "type": "video",
        "name": "Video",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Video Image"
          }, {
            "id": "heading",
            "type": "text",
            "label": "Heading",
            "default": "Title"
          }, {
            "id": "url",
            "type": "text",
            "label": "Video URL"
          }
        ]
      },
      {
        "type": "blog",
        "name": "Blog",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Blog Image"
          }, {
            "id": "heading",
            "type": "text",
            "label": "Heading",
            "default": "Title"
          }, {
            "id": "url",
            "type": "text",
            "label": "Blog URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Video Carousel",
        "category": "video"
      }
    ]
  }
{% endschema %}


<script>
      $(".video-caro-container").slick({
        dots: false,
        infinite: true,
        speed: 1000,
        slidesToShow: 2,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 5500,
        cssEase: 'ease',
        responsive: [
          {
            breakpoint: 950,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1
            }
          }, {
            breakpoint: 600,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1
            }
          }
        ]
      });
</script>

<script>
      $(".blog-caro-container").slick({
        dots: false,
        infinite: true,
        speed: 1000,
        slidesToShow: 2,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 5500,
        cssEase: 'ease',
        responsive: [
          {
            breakpoint: 950,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1
            }
          }, {
            breakpoint: 600,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1
            }
          }
        ]
      });
</script>