      }
		],

		"blocks" : [
			{
				"type": "two-col-carousel",
				"name": "two-col-carousel Slider",
				"settings": [
          {
            "type": "select",
            "id": "content_background",
            "label": "Background Color",
            "default": "white",
            "options": [
              {
                "value": "white",
