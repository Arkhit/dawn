{% style %}

.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

.xcp-pick-your-pro {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}

.xcp-pick-your-pro .xcp-pick-your-pro__product-card {
  width: 50%;
  min-width: 600px;
}

.xcp-pick-your-pro .xcp-pick-your-pro__product-card__title {
  font-size: 24px;
  text-align: center;
}

.xcp-pick-your-pro .xcp-pick-your-pro__product-card__price {
  font-size: 24px;
  width: 100%;
  text-align: center;
  font-weight: bold;
  color: var(--gradient-base-accent-2);
}

.xcp-pick-your-pro__product-card__image {
  margin: 0 auto;
  display: block;
  width: 90%;
  height: 468px;
  object-fit: contain;
}

.xcp-pick-your-pro .btn {
  width: 212px;
  margin: 0 auto;
  display: flex;
  justify-content: center;
}

.xcp-pick-your-pro .xcp-affirm {
  font-size: 21px;
}
@media screen and (max-width: 1200px) {
  .xcp-pick-your-pro .xcp-pick-your-pro__product-card {
    width: 100%;
    margin-bottom: 20px;
  }
}

@media screen and (max-width: 750px) {
  .xcp-pick-your-pro .xcp-pick-your-pro__product-card {
    min-width: unset;
    width: 98%
    margin: 0 1%
  }

  .xcp-pick-your-pro__product-card__image {
  }
}
{% endstyle %}
{% assign product_blocks = section.blocks | where: 'type', 'product-card' %}
<div class="xcp-pick-your-pro--wrapper color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="xcp-pick-your-pro">
    {% for block in product_blocks %}
      <div class="xcp-pick-your-pro__product-card">
        {{block.settings.image | image_url: width: 1000 | image_tag: class: 'xcp-pick-your-pro__product-card__image' }}
        <h4 class="xcp-pick-your-pro__product-card__title">{{block.settings.product.title}}</h4>
        {% render 'xcp-affirm-overview', product: block.settings.product %}
        <p class="xcp-pick-your-pro__product-card__price">{{block.settings.product.price | money }}</p>
        <a href="{{block.settings.button_link}}" class="btn btn-primary">{{block.settings.button_text}}</a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "XCP Pick Your Pro",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    }
  ],
  "blocks": [
    {
      "name": "Product Card",
      "type": "product-card",
      "settings": [
        {
          "type": "product",
          "label": "Product",
          "id": "product"
        },
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
          "type": "text",
          "label": "Button text",
          "id": "button_text"
        },
        {
          "type": "url",
          "label": "Button link",
          "id": "button_link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "XCP Pick Your Pro"
    }
  ]
}
{% endschema %}
