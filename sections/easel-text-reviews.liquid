{% style %}
.easel-text-reviews.section-{{ section.id }} {
  color: {{ section.settings.color }};
  background-color: {{ section.settings.bg_color }};
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}

.easel-text-reviews__container {
  max-width: 1200px;
  margin: 0 auto;
}

.easel-text-reviews__item {
  max-width: 327px;
  min-height: 316px;
}

.easel-text-reviews__item__quote {

}

.easel-text-reviews__item__text {
  font-weight: bold;
}

.easel-text-reviews__item__author {
  font-weight: bold;
}
{% endstyle %}
<div class="easel-text-reviews section-{{ section.id }}">
  <div class="easel-text-reviews__container">
    {% for block in section.blocks %}
      <div class="easel-text-reviews__item">
        <div class="easel-text-reviews__item__quote">
          "
        </div>
        <p class="easel-text-reviews__item__text">
          {{ block.settings.text }}
        </p>
        <p class="easel-text-reviews__item__author">
          {{ block.settings.text }}
        </p>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "Easel Text Reviews",
  "presets": [ { "name": "Easel Text Reviews" } ],
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Item",
      "type": "item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        }
      ]
    }
  ]
}
{% endschema %}
