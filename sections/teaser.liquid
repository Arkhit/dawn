<div id="{{ section.id }}">
  {% assign teaser = section.settings %}
  {% render 'teaser', image: teaser.image, headline: teaser.headline, copy: teaser.teaser_copy, price: teaser.price %}
</div>

{% schema %}
{
  "name": "t:sections.teaser.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "default": "Highlights",
      "label": "t:sections.teaser.settings.headline.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.teaser.settings.image.label"
    },
    {
      "type": "richtext",
      "id": "teaser_copy",
      "label": "t:sections.teaser.settings.teaser_copy.label"
    },
    {
      "type": "url",
      "id": "price",
      "label": "t:sections.teaser.settings.price.label"
    },
    {
      "type": "url",
      "id": "url",
      "label": "t:sections.teaser.settings.url.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.teaser.presets.name"
    }
  ]
}
{% endschema %}
