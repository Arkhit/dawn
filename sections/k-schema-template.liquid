<link rel="stylesheet" href="{{ 'file-name.css' | asset_url }}" media="print" onload="this.media='all'">

<!-- Make sure to check if it's in section or block. IF in block these need to be declared inside FOR block -->
{% assign background_color = "bg-" | append: section.settings.background_color %}
{% assign img_placement = section.settings.img_placement %}
{% assign heading_color = "brand-" | append: section.settings.heading_color %}
{% assign heading_font_weight = "font-weight-" | append: section.settings.heading_font_weight %}
{% assign subheading_color = "brand-" | append: section.settings.subheading_color %}
{% assign subheading_font_weight = "font-weight-" | append: section.settings.subheading_font_weight %}
{% assign alt_heading_color = "brand-" | append: section.settings.alt_heading_color %}
{% assign alt_heading_font_weight = "font-weight-" | append: section.settings.alt_heading_font_weight %}
{% assign para_background = "bg-" | append: section.settings.para_background %}
{% assign cta_bg = "bg-" | append: section.settings.cta_bg %}
{% assign cta_color = "brand-" | append: section.settings.cta_color %}

<!-- Add these variables as classes to dynamically change CSS with assinged variables above -->

{{ background_color }}
{{ img_placement }}
{{ heading_color }}
{{ heading_font-weight }}
{{ subheading_color }}
{{ subheading_font-weight }}
{{ alt_heading_color }}
{{ alt_heading_font-weight }}
{{ para_background }}
{{ cta_bg }}
{{ cta_color }}

<!-- Start of HTML -->

<section class="section-name">
  {% if section.settings.heading != blank %}
      <h2 class="heading text-center {{heading_color}}">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <h3 class="subheading text-center {{subheading_color}}">{{ section.settings.subheading }}</h3>
    {% endif %}
</section>

<!-- In order to use LIQUID variables to change CSS, you must add a style tag -->
{% style %}
  .section-name {
    padding:  {{ section.settings.section_padding }}px 0px;
    margin-top: {{ section.settings.section_margin_top }};
    margin-bottom: {{ section.settings.section_margin_bottom }};
  }
  .section-name .heading {
    font-size: {{ section.settings.heading_font_size }}px;
  }
  .section-name .subheading {
    font-size: {{ section.settings.subheading_font_size }}px;
  }
  .section-name .alt-heading {
    font-size: {{ section.settings.alt_heading_font_size }}px;
  }
  .section-name-para {
    font-size: {{ section.settings.text_font_size }}px;
    padding:  {{ section.settings.para_padding }}px;
  }
{% endstyle %}

