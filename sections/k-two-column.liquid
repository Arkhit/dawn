{% assign background_color = "bg-" | append: section.settings.background_color %}
{% assign img_placement = section.settings.img_placement %}

<div class="two-col {{background_color}}">
  {% if section.settings.heading != blank or section.settings.subheading != blank %}
    {% render 'headings' %}
  {% endif %}

  <div class="two-col-box page-width">
    {% if img_placement == 'right' %}
      <div class="bullet-container">
        {% if section.settings.alt-heading != blank %}
          <h3>{{ section.settings.alt-heading }}</h3>
        {% endif %}
        {{ section.settings.text }}
      </div>
      <div class="img-container">
        <img src="{{ section.settings.image | img_url: '1920x' }}" alt="" />
      </div>
    {% endif %}

    {% if img_placement == 'left' %}
      <div class="img-container">
        <img src="{{ section.settings.image | img_url: '1920x' }}" alt="" />
      </div>
      <div class="bullet-container">
        {% if section.settings.alt-heading != blank %}
          <h3>{{ section.settings.alt-heading }}</h3>
        {% endif %}
          {{ section.settings.text }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Two Column",
    "settings": [
      {
        "type": "select",
        "id": "background_color",
        "label": "Background Color",
        "default": "white",
        "options": [
          {
            "value": "white",
            "label": "White"
          }, {
            "value": "lighter-blue",
            "label": "Blue"
          }
        ]
      },
      {
        "type": "select",
        "id": "img_placement",
        "label": "Image Placement",
        "default": "left",
        "options": [
          {
            "value": "right",
            "label": "Right"
          }, {
            "value": "left",
            "label": "Left"
          }
        ]
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "Icon Top"
      }, 
      {
        "id": "heading",
        "type": "text",
        "label": "Heading",
        "default": "Title"
      }, {
        "id": "alt-heading",
        "type": "text",
        "label": "Alt-Heading",
        "default": "Alt-Title"
      },
      {
        "id": "text",
        "type": "richtext",
        "label": "Bullets"
      }
    ],
    "presets": [
      {
        "name": "Two Column",
        "category": "columns"
      }
    ]
  }
{% endschema %}

{% style %}
  .two-col {
    padding: 50px 0;
  }
  .two-col-box .img-container {
    width: 100%;
    text-align: center;
  }
  .two-col-box .img-container img {
    width: 100%;
  }
  .two-col .two-col-box {
    font-family: basic-sans, sans-serif;
    font-style: normal;
    font-weight: 400;
    color: #4a4b54;
  }
  .bullet-container h3 {
    font-size: calc(var(--font-heading-scale) * 2.4rem);
  }
  .two-col .two-col-box li {
    font-size: 18px;
    list-style: "\2713";
    padding: 0 0 0 5px;
    font-weight: 200;
    margin-bottom: 20px;
  }
  .two-col .two-col-box li::marker {
    color: var(--brand-refresh);
  }
  .two-col-box {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    place-items: center;
    margin: 0 auto;
    gap: 50px;
  }
  .bullet-container ul {
    display: grid;
    grid-template-rows: 1fr;
    padding: 0;
  }
  .bullet-container .checkmark {
    width: 7%;
  }
  .bullet-container span.brand-blue {
    font-size: 18px;
  }

  /* MEDIA QUERIES */

  @media(max-width: 786px) {
    .bullet-container ul {
      grid-template-columns: 1fr 1fr;
      margin: 15px auto;
      column-gap: 15px;
    }
    .two-col-box {
      grid-template-columns: repeat(1, 1fr);
    }
    .two-col-box .img-container {
      grid-row: 1 / 3;
      grid-column: 1 / 2;
    }
    .two-col .two-col-box li {
      font-size: 20px;
    }
    .two-col .page-width {
      padding: 0 10rem;
    }
    .bullet-container h3 {
      text-align: center;
    }
  }

  @media(max-width: 650px) {
    .bullet-container ul {
      grid-template-columns: none;
      grid-template-rows: repeat(1, 1fr);
    }
    .two-col .two-col-box li {
      font-size: 16px;
    }
    .bullet-container span.brand-blue {
      font-size: 16px;
    }
    .two-col .page-width {
      padding: 0 1.5rem;
    }
  }
{% endstyle %}