<link rel="stylesheet" href="{{ 'k-two-column-styles.css' | asset_url }}" media="print" onload="this.media='all'">


{% assign background_color = "bg-" | append: section.settings.background_color %}
{% assign img_placement = section.settings.img_placement %}
{% assign alt_heading_color = "brand-" | append: section.settings.alt_heading_color %}
{% assign alt_heading_font_weight = "font-weight-" | append: section.settings.alt_heading_font_weight %}
{% assign para_background = "bg-" | append: section.settings.para_background %}

<div class="two-col {{background_color}}">
  {% if section.settings.heading != blank or section.settings.subheading != blank %}
    {% render 'headings' %}
  {% endif %}

  <div class="two-col-box page-width">
    {% if img_placement == 'right' %}
      <div class="bullet-container">
        {% if section.settings.alt_heading != blank %}
          <h3 class="{{alt_heading_color}} {{alt_heading_font_weight}}">{{ section.settings.alt_heading }}</h3>
        {% endif %}
        <div class="two-col-para">
          {{ section.settings.text }}
        </div>
      </div>
      
      <div class="img-container">
        <img src="{{ section.settings.image | img_url: '1920x' }}" alt="" />
      </div>
    {% endif %}

    {% if img_placement == 'left' %}
      <div class="img-container">
        <img src="{{ section.settings.image | img_url: '1920x' }}" alt="" />
      </div>
      <div class="bullet-container">
        {% if section.settings.alt_heading != blank %}
          <h3 class="{{alt_heading_color}} {{alt_heading_font_weight}}">{{ section.settings.alt_heading }}</h3>
        {% endif %}
        <div class="two-col-para">
          {{ section.settings.text }}
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Two Column",
    "settings": [
      {
        "type": "select",
        "id": "background_color",
        "label": "Background Color",
        "default": "white",
        "options": [
          {
            "value": "white",
            "label": "White"
          }, {
            "value": "light-blue",
            "label": "Blue"
          },
          {
            "value": "lighter-blue",
            "label": "Light Blue"
          }
        ]
      },
      {
        "type": "select",
        "id": "img_placement",
        "label": "Image Placement",
        "default": "left",
        "options": [
          {
            "value": "right",
            "label": "Right"
          }, {
            "value": "left",
            "label": "Left"
          }
        ]
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "Icon Top"
      }, 
      {
        "id": "heading",
        "type": "text",
        "label": "Heading",
        "default": "Title"
      },{
        "id": "alt_heading",
        "type": "text",
        "label": "Paragraph Heading",
        "default": "Paragraph Heading"
      },
      {
            "type": "select",
            "id": "alt_heading_color",
            "label": "Heading Font Color",
            "default": "blue",
            "options": [
              {
                "value": "blue",
                "label": "Blue"
              },
              {
                "value": "dark-blue",
                "label": "Dark Blue"
              },
              {
                "value": "gray",
                "label": "Gray"
              },
              {
                "value": "dark-gray",
                "label": "Dark Gray"
              }, {
                "value": "white",
                "label": "White"
              }, {
                "value": "dark",
                "label": "Dark"
              }
            ]
      },
      {
        "type": "select",
        "id": "alt_heading_font_weight",
        "label": "Paragraph Heading Font Weight",
        "default": "bold",
        "options": [
          {
            "value": "light",
            "label": "Light"
          }, {
            "value": "regular",
            "label": "Regular"
          }, {
            "value": "bold",
            "label": "Bold"
          }
        ]
      },
      {
        "id": "text",
        "type": "richtext",
        "label": "Bullets"
      },
      {
        "type": "select",
        "id": "para_background",
        "label": "Paragraph Background Color",
        "default": "white",
        "options": [
          {
            "value": "white",
            "label": "White"
          }, {
            "value": "light-blue",
            "label": "Blue"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Two Column",
        "category": "columns"
      }
    ]
  }
{% endschema %}