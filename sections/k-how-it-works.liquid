{% if section.settings.show_related %}
<div class="contents">
  <div class="grid box page-width">
    <div class="grid__item medium-up--one-half" >
      <h2>{{section.settings.heading}}</h2>
      <!-- <div class="sub-contents">{{section.settings.para}}</div> -->
    </div>
    <div class="grid__item medium-up--one-half" >
      <!-- <h2>{{section.settings.heading}}</h2> -->
      <div class="sub-contents">{{section.settings.para}}</div>
    </div>
  </div>
  <div class="grid page-width slick-carousel">
    {%for block in section.blocks%}
    <div class="slide-image-box"><img src="{{block.settings.image | img_url:'master'}}"></div>
    {%endfor%}
  </div>
</div>

{%endif%}
{% schema %}
  {
    "name": "How It Works",
    "settings": [
		{
		"type": "checkbox",
		"id": "show_related",
		"label": "Show Section",
		"default": true
      },
		{
        "id": "image",
        "type": "image_picker",
        "label": "Icon Top"
      	},
		{
        "id": "heading",
        "type": "text",
        "label": "Heading",
        "default": "Title"
      },
      {
        "id": "para",
        "type": "richtext",
        "label": "Text"
      }

		],

		"blocks" : [
			{
				"type": "Slides",
				"name": " Add Slides",
				"settings": [
					{
						"type": "image_picker",
						"id": "image",
						
						"label": "Add Slide"
					}
				]
			}
		]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
<script>
  $(".slick-carousel").slick({
    speed: 1000,
		autoplay: true,
		autoplaySpeed: 2500,
		cssEase: 'ease',
    slidesToShow: 3,
  	slidesToScroll: 1,
    infinite: true,
    swipeToSlide: true,
  	centerMode: false,
    arrows: true,
    responsive: [
            {
              breakpoint: 992,
              settings: {
                slidesToShow: 2,
                dots:true,
              }
            },
            {
              breakpoint: 750,
              settings: {
                slidesToShow: 1,
                dots:true,
              }
            },
    ]
});
</script>