      },
      {
        "id": "subheading",
        "type": "text",
        "label": "Sub Heading",
        "default": "Sub Title"
      },
      {
            "type": "select",
            "id": "subheading_color",
            "label": "Heading Font Color",
            "default": "dark-gray",
            "options": [
              {
                "value": "blue",
                "label": "Blue"
              },
              {
                "value": "dark-blue",
                "label": "Dark Blue"
              },
              {
                "value": "gray",
                "label": "Gray"
              },
              {
                "value": "dark-gray",
                "label": "Dark Gray"
              }, {
                "value": "white",
                "label": "White"
              }, {
                "value": "dark",
                "label": "Dark"
              }
            ]
      },
      {
        "type": "range",
        "id": "subheading_font_size",
        "min":  18,
        "max":  68,
        "step":  2,
        "unit": "px" ,
        "label": "Sub Heading Font size",
        "default":  24
      }
    ],
    "presets": [
      {
        "name": "Video with Headers",
        "category": "Video"
      }
    ]
  }
{% endschema %}