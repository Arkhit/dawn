{% style %}
.xcp-add-to-cart {
  max-width: 1200px;
  margin: 0 auto;
}

.xcp-add-to-cart .product-form {
  width: 100%;
}

.xcp-add-to-cart .product-form button {
  width: 300px;
  {% case section.settings.button_position %}
  {% when "left" %}
    float: left;
  {% when "right" %}
    float: right;
  {% else %}
    margin: 0 auto;
  {% endcase %}
}
{% endstyle %}

<div class="xcp-add-to-cart">
  {% render 'xcp-order-now', settings: section.settings, section_id: section.id %}
</div>
{% schema %}
{
  "name": "XCPro Add Btn",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "select",
      "id": "background_color",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "normal",
      "label": "Background Color"
    },
    {
      "type": "select",
      "id": "button_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Button position"
    }
  ],
  "presets": [
    {
      "name": "XCPro Add Btn"
    }
  ]
}
{% endschema %}
