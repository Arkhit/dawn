{% assign background_color = "bg-" | append: section.settings.background_color %}

<div class="phones-carousel contents {{background_color}}">
  {% if section.settings.heading != blank or section.settings.subheading != blank %}
    {% render 'headings' %}
  {% endif %}

  <div class="grid page-width slick-carousel">
    {%for block in section.blocks%}
      <div class="grid__item medium-up--one-third small--one-half">
        <div class="image-card">
          <div class="slide-image-box"><img src="{{block.settings.image | img_url:'master'}}"></div>
          <div class="image-card-content">
            <h5>{{ block.settings.image_title }}</h5>
          </div>
        </div>
      </div>
    {%endfor%}
  </div>
</div>

{% javascript %}
  $(".slick-carousel", ".phones-carousel").slick({
    speed: 1000,
    autoplay: true,
    autoplaySpeed: 2500,
    cssEase: 'ease',
    slidesToShow: 3,
    slidesToScroll: 1,
    infinite: true,
    swipeToSlide: true,
    centerMode: false,
    responsive: [
      {
        breakpoint: 992,
        settings: {
          slidesToShow: 2,
          dots: true
        }
      }, {
        breakpoint: 750,
        settings: {
          slidesToShow: 1,
          dots: true
        }
      }
    ]
  });
{% endjavascript %}

{% schema %}
  {
    "name": "Phones carousel",
    "max_blocks": 20,
    "settings": [
      {
        "type": "select",
        "id": "background_color",
        "label": "Background Color",
        "default": "white",
        "options": [
          {
            "value": "white",
            "label": "White"
          }, {
            "value": "lighter-blue",
            "label": "Blue"
          }
        ]
      }, {
        "id": "heading",
        "type": "text",
        "label": "Heading",
        "default": "Title"
      }, {
        "id": "subheading",
        "type": "text",
        "label": "Subheading",
        "default": "Sub Title"
      }
    ],
    "blocks": [
      {
        "name": "Phone screenshot",
        "type": "card",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "image_title",
            "label": "Title",
            "default": "Image title goes here"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Phones Carousel",
        "category": "Image"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .phones-carousel {
    padding-bottom: 40px;
  }

  .phones-carousel .headings {
    padding: 80px 40px 60px;
  }
  .phones-carousel .headings h2 {
    color: var(--brand-refresh-dark-gray) !important;
    margin: 0 auto 10px;
    text-align: center;
    font-size: 48px !important;
    font-weight: 300 !important;
    width: 100%;
  }
  .phones-carousel .headings h4 {
    color: var(--brand-refresh-dark-gray) !important;
    margin: 0 auto;
    text-align: center;
    font-size: 28px !important;
    font-weight: 200 !important;
    width: 100%;
  }
  .phones-carousel.contents h5 {
    font-size: 20px;
    margin: 0 0 6px;
  }
  .phones-carousel.contents .image-card {
    height: 520px;
    background: white;
    overflow: hidden;
    border: 1px solid gray;
    border-radius: 10px;
    margin: 0 25px 60px;
  }

  .phones-carousel.contents img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .phones-carousel.contents .image-card-content {
    padding: 20px;
  }
  .phones-carousel.contents .slick-dots {
    position: static !important;
    padding-bottom: 30px;
  }
  .phones-carousel.contents .slick-dots li button {
    color: #818181;
  }

  /* MEDIA QUERIES */

  @media(max-width: 1000px) {
    .phones-carousel .headings {
      padding: 50px 40px 40px;
    }
    .phones-carousel .headings h2 {
      font-size: 38px;
    }
    .phones-carousel .headings h4 {
      font-size: 24px;
    }
  }
  @media(max-width: 600px) {
    .phones-carousel .headings h4 {
      font-size: 18px;
    }
  }
  @media(max-width: 400px) {
    .phones-carousel .headings h2 {
      font-size: 28px;
    }
  }
{% endstylesheet %}