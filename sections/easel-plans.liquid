{% style %}
.easel-plans.section-{{ section.id }} {
  background-color: {{ section.settings.bg_color }};
  color: {{ section.settings.color }};
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}

{% for block in section.blocks %}
  .easel-plans__item.block-{{ block.id }} .easel-plans__item__box {
    background-color: {{ block.settings.box_color }};
    color: {{ block.settings.color }};
  }

  .easel-plans__item.block-{{ block.id }} .easel-plans__item__btn {
    background-color: {{ block.settings.btn_bg_color }};
    color: {{ block.settings.btn_color }};
  }
{% endfor %}
{% endstyle %}
<div class="easel-plans section-{{ section.id }}">
  <div class="easel-plans__container">
    <p class="easel-plans__title">{{ section.settings.title }}</p>
    <p class="easel-plans__subtitle">{{ section.settings.subtitle }}</p>
    <div class="easel-plans__items-wrapper">
      {% for block in section.blocks %}
        <div class="easel-plans__item block-{{ block.id }}">
          <div class="easel-plans__item__box">
            <p class="easel-plans__item__title">{{ block.settings.title }}</p>
            <p class="easel-plans__item__subtitle">{{ block.settings.subtitle }}</p>
            <p class="easel-plans__item__price">{{ block.settings.price }}</p>
            <p class="easel-plans__item__bottom-text">{{ block.settings.bottom_text }}</p>
          </div>
          <a href="{{ block.settings.btn_url }}" class="easel-plans__item__btn">
            {{ block.settings.btn_text }}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Easel Plans",
  "presets": [ { "name": "Easel Plans" } ],
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 0
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sub-Title"
    }
  ],
  "blocks": [
    {
      "name": "Item",
      "type": "item",
      "settings": [
        {
          "type": "color",
          "id": "box_color",
          "label": "Box Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "color",
          "label": "Color",
          "default": "#FFFFFF"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Sub-Title"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price tag"
        },
        {
          "type": "text",
          "id": "bottom_text",
          "label": "Bottom text"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button URL"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button text"
        },
        {
          "type": "color",
          "id": "btn_bg_color",
          "label": "Button Background Color",
          "default": "#FFB256"
        },
        {
          "type": "color",
          "id": "btn_color",
          "label": "Button Color",
          "default": "#000000"
        },
      ]
    }
  ]
}
{% endschema %}
