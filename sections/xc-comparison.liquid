<div id="section-{{ section.id }}" class="xc-comparison color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="xc-comparison__container">
    <div class="xc-comparison__flex-wrapper">
      {% for block in section.blocks %}
        {% assign hide_block_mobile_class = "" %}
        {% if block.settings.hide_block_mobile %}
          {% assign hide_block_mobile_class = "hide-mobile" %}
        {% endif %}
        <div id="block-{{ block.id }}" class="{{ hide_block_mobile_class }}">
          {% render "xc-comparison-column", settings: block.settings %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
