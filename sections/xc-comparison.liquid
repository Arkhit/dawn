@media screen and (max-width: 1200px) {
  .xc-comparison .hide-mobile {
    display: none;
  }

  .xc-comparison-column {
    min-width: unset;
  }

  .xc-comparison-column__img {
    width: 100%;
    height: auto;
  }

  .xc-comparison-column__btn-wrapper {
    flex-direction: column;
    text-align: center;
  }

  .xc-comparison-column__btn-wrapper .btn {
    margin-bottom: 10px;
  }

  .xc-comparison-column__line-header.hide-desk {
    display: block;
  }

  {% for block in section.blocks %}
    #block-{{ block.id }} {
      max-width: calc((100% / {{ section.blocks | size | minus: 1 }}) - 3%);
    }
  {% endfor %}

  .xc-comparison-column__line-content {
    text-align: center;
  }

  #section-{{ section.id }} .xc-comparison-column__line.line12 .xc-comparison-column__line-content {
    text-align: left;
  }

  #section-{{ section.id }} .xc-comparison-column__line.line1 {
    min-height: calc({{ section.settings.line1_min_height }}px - 105px);
  }

  #section-{{ section.id }} .xc-comparison-column__line.line3 {
    min-height: calc({{ section.settings.line1_min_height }}px - 48px);
  }

  #section-{{ section.id }} .xc-comparison-column__line.line4 {
    min-height: calc({{ section.settings.line1_min_height }}px - 77px);
  }

  #section-{{ section.id }} .xc-comparison-column__line.line8 {
    min-height: calc({{ section.settings.line1_min_height }}px - 135px);
  }

  #section-{{ section.id }} .xc-comparison-column__line.line11 {
    min-height: calc({{ section.settings.line1_min_height }}px - 135px);
  }
}
