{% style %}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

.xc-comparison__container {
  max-width: 1200px;
  margin: 0 auto;
}

.xc-comparison__flex-wrapper {
  display: flex;
  justify-content: space-between;
}

.xc-comparison-column__title {
  font-size: 40px;
  line-height: 1.2;
  font-size: "AlrightSans-Light";
}
 
.xc-comparison-column__img-title {
  text-align: center;
  font-size: 26px;
}

.xc-comparison-column__img {
  object-fit: cover;
  width: 227px;
  height: 227px;
  margin: 0 auto;
  display: block;
  border: 2px solid lightgray;
  border-radius: 3px;
}

.xc-comparison-column {
  padding: 50px 30px;
  border-radius: 5px;
  min-width: 400px;
}

.xc-comparison-column__line-header.hide-desk {
  display: none;
}

.xc-comparison-column__line {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.xc-comparison-column__btn-wrapper {
  display: flex;
  justify-content: space-around;
  padding-top: 20px;
}

.xc-comparison-column__btn-wrapper *:empty {
  display: block;
}

.xc-comparison-column__btn-wrapper .btn {
  text-decoration: none;
  color: black;
  background: lightgray;
  padding: 7px 20px;
}

.xc-comparison-column__btn-wrapper .btn-primary {
  color: black;
  font-weight: bold;
  background: var(--gradient-base-accent-2);
  border-radius: 5px;
}

.xc-comparison-column__btn-wrapper .btn-black {
  color: white;
  background: black;
  border-radius: 5px;
}

.xc-comparison-column__line-header {
  font-size: 12pt;
  font-weight: bold;
  padding-top: 20px;
}

.xc-comparison-column__line-content {
  font-size: 12pt;
  overflow-wrap: break-word;
}

{% for block in section.blocks %}
  #block-{{ block.id }} {
    max-width: calc((100% / {{ section.blocks | size }}) - 3%);
  }

  #block-{{ block.id }} .xc-comparison-column {
    background-color: {{ block.settings.bg_color }};
    color: {{ block.settings.color }};
  }

  #block-{{ block.id }} .xc-comparison-column__separator {
    display: block;
    width: 100%;
    margin: 0 auto;
    border: 1px solid {{ block.settings.line_sep_color }};
    height: 1px;
  }

  #block-{{ block.id }} .xc-comparison-column__line-header {
    text-align: {{ block.settings.header_text_align }};
  }
{% endfor %}

