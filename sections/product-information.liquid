              {% endif %}
            </div>
            <div class="information-item-content">
              <h2>{{ section.settings.item6_title }}</h2>
              {% if section.settings.item6_content != blank %}<p>{{ section.settings.item6_content }}</p>{% endif %}
            </div>
        </div>
        {% endif %}
      </div>

      {% if section.blocks != blank %}
        <div class="information-content-right">
          {% for block in section.blocks %}
            {% if block.settings.text != blank %}  
              <div class="information-item">
                  <div class="information-item-image">
                    {% if block.settings.image != blank %}
                      <img src="{{ block.settings.image | img_url: 'thumb' }}">
                    {% else %}
                      <div style="display:block; width:30px"></div>
                    {% endif %}
                  </div>
                  <div class="information-item-content">
                    <p>{{ block.settings.text }}</p>
                  </div>
              </div>
              {% endif %}
          {% endfor %}  
        </div>
      {% endif %}  
    </div>
  </div>



</div>

