<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media only screen and (max-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
  {% if section.settings.bg_image != blank  %}
    #shopify-section-{{ section.id }} .page-width {
      background: url("{{ section.settings.bg_image | img_url: 'master' }}"); 
      background-size: cover; 
      background-repeat: no-repeat; 
      background-position: {{ section.settings.bg_image_position }};
    }
  {% endif %}
  {% if section.settings.bg_color != blank  %}
    @media only screen and (max-width: 768px) {
      #shopify-section-{{ section.id }} .page-width {
        background: {{ section.settings.bg_color }};
      }
    }
  {% endif %}
{%- endstyle -%}

<div 
  {% if section.settings.id_name != blank %}id="{{ section.settings.id_name }}"{% endif %} 
  class="{% if section.settings.class_name != blank %} {{ section.settings.class_name }}{% endif %}{% if template.suffix != blank %} template-{{  template.suffix }}{% endif %}">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.title != blank -%}
    <h2 class="title">
        {{ section.settings.title | escape }}
    </h2>
    {%- endif -%}
    
    <div class="product-information-container">
      <div class="information-content-left">
        {% if section.settings.item1_title != blank or section.settings.item1_content != blank %}
        <div class="information-item">
            <div class="information-item-image">
              {% if section.settings.item1_image != blank %}
                <img src="{{ section.settings.item1_image | img_url: 'thumb' }}">
              {% else %}
                <div style="display:block; width:30px"></div>
              {% endif %}
            </div>
            <div class="information-item-content">
              <h2>{{ section.settings.item1_title }}</h2>
              {% if section.settings.item1_content != blank %}<p>{{ section.settings.item1_content }}</p>{% endif %}
            </div>
        </div>
        {% endif %}  
  
        {% if section.settings.item2_title != blank or section.settings.item2_content != blank %}
