{% schema %}
{
  "name": "Featured Items",
  "settings": [],
  "blocks": [
    {
      "type": "item",
      "name": "Feature Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "High-Quality Codes"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Learn More Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Items"
    }
  ]
}
{% endschema %}

<section class="featured-items">
  <div class="featured-items__container">
    {% for block in section.blocks %}
      <div
        class="featured-item"
        style="background-image: url('{{ block.settings.icon | image_url: 'thumb' }}');"
      >
        <!-- Title Content -->
        <h3 class="featured-item__title">{{ block.settings.title }}</h3>
        <!-- Link to learn more -->
        <a href="{{ block.settings.link }}" class="featured-item__link">LEARN MORE</a>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  /* Section container styles */
  .featured-items {
    padding: 100px 208px;
    background-color: #ffffff;
  }

  /* Flex container for the items */
  .featured-items__container {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 20px;
  }

  /* Individual card styling */
  .featured-item {
    width: 340px;
    height: 340px;
    background-size: 50%;
    background-repeat: no-repeat;
    background-position: center;
    background-color: #f3f3f3;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    padding: 20px;
  }

  /* Title styles */
  .featured-item__title {
    font-family: 'Domine', serif;
    padding-top: 110px;
    font-size: 36px;
    font-weight: 400;
    line-height: 41.04px;
    color: #000000;
    margin: 0 auto; /* Centers the title */
  }

  .featured-item__link {
    font-family: 'Cambay', sans-serif;
    font-size: 24px;
    font-weight: 400;
    line-height: 39.09px;
    color: #000000;
    text-decoration: none;
    margin-top: auto; /* Pushes the link to the bottom of the card */
  }

  /* Responsiveness */
  @media (max-width: 768px) {
    .featured-item {
      width: 100%;
      height: auto;
    }

    .featured-items__container {
      flex-direction: column;
    }
  }
</style>
