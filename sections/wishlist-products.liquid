{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- if section.settings.enable_quick_add -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign wishlist_items = customer.metafields.custom.wishlist.value %}
<div class="page-width section-{{ section.id }}-padding">
  {% if wishlist_items %}
    {% unless section.settings.heading_element_custom %}
      <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    {% else %}
      {%
        render 'headings',
        heading_size: section.settings.heading_size,
        heading_element: section.settings.heading_element,
        title: section.settings.heading,
        class: 'related-products__heading inline-richtext',
      %}
    {% endunless %}
    <ul
      class="grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
      role="list"
    >
      {% for item in wishlist_items %}
        <li class="grid__item wishlist-item">
          {% render 'card-product',
            card_product: item.product,
            media_aspect_ratio: section.settings.image_ratio,
            image_shape: section.settings.image_shape,
            show_secondary_image: section.settings.show_secondary_image,
            show_vendor: section.settings.show_vendor,
            show_rating: section.settings.show_rating,
            show_quick_add: section.settings.enable_quick_add
          %}
        </li>
      {% endfor %}

      {% if request.design_mode %}
        {%- for i in (1..4) -%}
          <li
            class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          >
            {%- assign placeholder_image = 'product-apparel-' | append: forloop.rindex -%}
            {% render 'card-product',
              show_vendor: section.settings.show_vendor,
              placeholder_image: placeholder_image
            %}
          </li>
        {%- endfor -%}
      {% endif %}
    </ul>
  {% endif %}
</div>

