{{ 'bootstrap-utilities.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

.splash-banner h2 {
font-weight: 900;
text-shadow: 3px 3px 0px rgba(0,0,0,0.4);
font-style: italic;
}

.splash-banner {
  padding-top: 15px;
  padding-bottom: 15px;
}

.splash-banner h2 {
  margin: 0;
  
}

.splash-banner p {
  margin: 0;
 font-family: 'Montserrat', sans-serif;
  font-weight: 700;
  
}


.splash-banner small {
  font-size: 10px;
   font-style:normal!important;
}


.blink {
  animation: blinker 1s step-start infinite;
}

@keyframes blinker {
  50% {
    opacity: 0;
  }
}



{%endstyle%}



<div class="section-{{ section.id }}-padding">
<div class="splash-banner" style="background-color: {{ section.settings.color_background }}; color: {{ section.settings.color_text }}!important">
  {%- if section.settings.link != blank -%}<a href="{{ section.settings.link }}" role="link" style="color: {{ section.settings.color_text }}!important; text-decoration: none!important;">{%- endif -%}
  <div class="page-width">
    
        <div class="align-middle text-center">
          
          <h2 class="{% if section.settings.flashing_text == true %}blink{%endif%} h1" style="color: {{ section.settings.color_text }}!important">{{ section.settings.custom_text_title }}</h2>
         {% if section.settings.additional != blank %}<p class="mt-3 {% if section.settings.uppercase_additional == true%}text-uppercase{%endif%}">{{section.settings.additional}}</p>{%endif%}
 {% if section.settings.countdown != blank %}
        
  <div class="row justify-content-around">
  <div class="col-md-4">
    <span id="hours" class="h2" style="color: {{ section.settings.color_text }}!important"></span>
    <span class="hours">Hrs</span>
    </div>
    <div class="col-md-4">
      <span id="minutes" class="h2" style="color: {{ section.settings.color_text }}!important"></span>
      <span class="min">Min</span>
    </div>
    <div class="col-md-4">
      <span id="seconds" class="h2" style="color: {{ section.settings.color_text }}!important"></span>
      <span class="sec">Sec</span>
    </div>
  </div>

    
          {%endif%}
          <small>{{ section.settings.custom_text_body }}</small>
     
                
            

        </div>
    
    
 
  </div>
  {%- if section.settings.link != blank -%}</a>{%- endif -%}
</div>
</div>

{% schema %}
  {
    "name": "Full Page Splash",
    "settings": [
      {
        "id": "custom_text_title",
        "type": "text",
        "label": "Text box heading",
        "default": "Title"
      },
{
  "type": "checkbox",
  "id": "flashing_text",
  "label": "Flashing Text",
  "default": true
},




{
  "type": "color",
  "id": "color_background",
  "label": "Background Color",
  "default": "#000"
},
{
  "type": "color",
  "id": "color_text",
  "label": "Text Colour",
  "default": "#FFFFFF"
},
{
          "type": "url",
          "id": "link",
          "label": "Add link"
        },

    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "presets": [
      {
        "name": "Full Page Splash",
        "category": "info"
      }
    ]
  }
{% endschema %}