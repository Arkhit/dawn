{{ 'bootstrap-utilities.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

.splash-banner h2 {
font-weight: 900;
font-style: italic;
}

.splash-banner {
  padding-top: 80px;
  padding-bottom: 80px;
}

@media (max-width: 750px) {
.splash-banner {
padding-top: 40px;
  padding-bottom: 40px;
}
}

.splash-banner h2 {
  margin: 0;
  
}

.splash-banner p {
  margin: 0;
  
}

@media (max-width: 750px) {
.splash-banner .info {
margin-bottom: 40px;
}

.splash-banner .info:last-child {
margin-bottom: 0px;
}
}


.splash-banner .icon {
width: auto;
height: 100px;
margin-bottom: 20px;
}




{%endstyle%}



<div class="section-{{ section.id }}-padding">
  {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% endif %} title-wrapper--no-top-margin">
        <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.title | escape }}</h2>
  
        {%- if section.settings.show_view_all and section.settings.swipe_on_mobile and more_in_collection -%}
          <a href="{{ section.settings.collection.url }}" class="link underlined-link large-up-hide">{{ 'sections.featured_collection.view_all' | t }}</a>
        {%- endif -%}
      </div>
    {%- endunless -%}
  <div class="splash-banner" style="background-color: {{ section.settings.color_background }}; color: {{ section.settings.color_text }}!important">
  <div class="page-width">
    
        <div class="align-middle text-center">
         
        
  <div class="row justify-content-between">
  <div class="col-md-4 info">
    <img src="{{ section.settings.image_1  | img_url: 'master' }}" class="icon" loading="lazy"/>
    <h2>{{ section.settings.heading_1 }}</h2>
    <p>{{ section.settings.description_1 }}</p>
    </div>
    <div class="col-md-4 info">
    <img src="{{ section.settings.image_2  | img_url: 'master' }}" class="icon" loading="lazy"/>
      <h2>{{ section.settings.heading_2 }}</h2>
    <p>{{ section.settings.description_2 }}</p>
    </div>
    <div class="col-md-4 info">
     <img src="{{ section.settings.image_3  | img_url: 'master' }}" class="icon" loading="lazy"/>
      <h2>{{ section.settings.heading_3 }}</h2>
    <p>{{ section.settings.description_3 }}</p>
    </div>
  </div>


                
            

        </div>
    
    
 
  </div>

</div>
</div>

