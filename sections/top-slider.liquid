<div class="top-main-visual tw-text-center tw-bg-black tw-pt-[68px] md:tw-pt-[4px] tw-px-[36px] tw-pb-[28px] tw-relative">
  <div class="swiper">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide">
          <a
          {% if block.settings.link %}
            href="{{ block.settings.link }}"
          {% else %}
            role="link" aria-disabled="true"
              {% endif %}>
            <picture>
              <source srcset="{{ block.settings.image_sp | image_url: width: 828 }}" media="(max-width: 768px)">
              <img src="{{ block.settings.image | image_url: width: 1618 }}" alt="" class="">
            </picture>
          </a>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination swiper-pagination-white" slot="pagination"></div>
  </div>
  <p>scroll</p>
</div>

{% schema %}
{
  "name": "TOP スライダー",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "blocks": [
    {
      "type": "slide",
      "name": "t:sections.slideshow.blocks.slide.name",
      "limit": 10,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "title",
          "default": "スライド",
          "label": "タイトル"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.slideshow.blocks.slide.settings.image.label"
        },
        {
          "type": "image_picker",
          "id": "image_sp",
          "label": "SP画像"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.slideshow.blocks.slide.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TOP スライダー",
      "category": "TOP"
    }
  ]
}
{% endschema %}
