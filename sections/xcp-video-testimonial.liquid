{% style %}
.section-{{ section.id }}--padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}--padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

.xcp-video-testimonial__text-testimonial--wrapper.background-color-light {
  background-color: #333636;
  background: color
}

.xcp-video-testimonial .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 30px;
}

.xcp-video-testimonial__flex-wrapper {
  display: flex;
}
.xcp-video-testimonial__header {
  font-size: 44px;
  margin-block-start: 0.5rem;
}

.xcp-video-testimonial__header span {
  color: var(--gradient-base-accent-2);
}

.xcp-video-testimonial__content-side {
  width: 60%;
  min-height: 286px;
}
.xcp-video-testimonial__video-side {
  width: 40%;
}

.xcp-video-testimonial__text-testimonial--wrapper {
  padding: 20px 20px;
}

.xcp-video-testimonial__text-testimonial {
  font-size: 14px;
  text-align: justify;
  font-style: italic;
}

.xcp-video-testimonial__author {
  font-size: 14px;
  text-align: right;
  font-weight: bold;
}

.xcp-video-testimonial__video {
  width: 34vw;
  height: 100%;
  margin: 0 auto;
  display: block;
  border: 0;
  margin-left: 30px;
}

.xcp-video-testimonial .desktop {
  display: block;
}

.xcp-video-testimonial .mobile {
  display: none;
}

@media screen and (max-width: 750px) {
  .xcp-video-testimonial .desktop {
    display: none;
  }

  .xcp-video-testimonial .mobile {
    display: block;
  }

  .xcp-video-testimonial__video-side, .xcp-video-testimonial__content-side {
    width: 100%;
  }

  .xcp-video-testimonial__header {
    font-size: 28px;
    text-align: center;
  }
  .xcp-video-testimonial__video {
    width: unset;
    margin-left: 0;
    margin: 20px auto;
  }
}

{% endstyle %}
{%- assign video_id = section.settings.video_url.id -%}
<div class="xcp-video-testimonial section-{{section.id}}--padding background-color-{{section.settings.section_bg_color}}">
  <div class="page-width container">
    <div class="xcp-video-testimonial__flex-wrapper">
      <div class="xcp-video-testimonial__content-side">
        <h3 class="xcp-video-testimonial__header">{{section.settings.header}}</h3>
        <div class="xcp-video-testimonial__video-side mobile">
          {%- if section.settings.video_url and section.settings.video_url.type == 'youtube' -%}
            <iframe
              src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&autoplay=1{{ loop }}"
              class="js-youtube xcp-video-testimonial__video"
              allow="autoplay; allow-scripts; encrypted-media"
              allowfullscreen
              title="{{ section.settings.description | escape }}"
            ></iframe>
          {%- else -%}
            <iframe
              src="https://player.vimeo.com/video/{{ video_id }}?title=0&byline=0&portrait=0{{ loop }}"
              class="js-vimeo xcp-video-testimonial__video"
              allow="autoplay; encrypted-media"
              allowfullscreen
              title="{{ section.settings.description | escape }}"
            ></iframe>
          {%- endif -%}
        </div>
        <div class="xcp-video-testimonial__text-testimonial--wrapper background-color-{{section.settings.testimonial_bg_color}}">
          <div class="xcp-video-testimonial__text-testimonial">
            {{section.settings.testimonial}}
          </div>
          <p class="xcp-video-testimonial__author">
            - {{section.settings.author}}
          </p>
        </div>
      </div>
      <div class="xcp-video-testimonial__video-side desktop">
        {%- if section.settings.video_url and section.settings.video_url.type == 'youtube' -%}
          <iframe
            src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&autoplay=1{{ loop }}"
            class="js-youtube xcp-video-testimonial__video"
            allow="autoplay; allow-scripts; encrypted-media"
            allowfullscreen
            title="{{ section.settings.description | escape }}"
          ></iframe>
        {%- else -%}
          <iframe
            src="https://player.vimeo.com/video/{{ video_id }}?title=0&byline=0&portrait=0{{ loop }}"
            class="js-vimeo xcp-video-testimonial__video"
            allow="autoplay; encrypted-media"
            allowfullscreen
            title="{{ section.settings.description | escape }}"
          ></iframe>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "XCP Video Testimonial",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "html",
      "id": "header",
      "label": "Header"
    },
    {
      "type": "richtext",
      "id": "testimonial",
      "label": "Testimonal"
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "Video URL",
      "accept": [
        "youtube",
        "vimeo"
      ]
    },
    {
      "type": "select",
      "id": "section_bg_color",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "Section Backgroung color"
    },
    {
      "type": "select",
      "id": "testimonial_bg_color",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "light",
          "label": "Background 1 light"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "light",
      "label": "Testimonial Backgroung color"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "XCP Video Testimonial"
    }
  ]
}
{% endschema %}
