{%style%}
.page-cover {
background-position: center center;
		background-repeat: no-repeat;
		height: auto;
		background-size: cover;
		min-height: 500px;
	  padding-top: 80px;
	  padding-bottom: 80px;
	 box-shadow:inset 0 0 0 2000px rgba(0, 0, 0, 0.2);
margin-bottom: 40px;
	}

	@media (max-width: 750px) { 
	.page-cover {

min-height: 0;
	}
	}

  @keyframes border-flicker {
  0% {
    opacity:0.1;
 
  }
  2% {
    opacity:1;

  }
  4% {
    opacity:0.1;
   
  }
  
  8% {
    opacity:1;
 
  }
  70% {
    opacity:0.7;
   
  }
  100% {
    opacity:1;
    
  }
}

.inner {
padding-top: 40px;
padding-bottom: 40px;
}

.bottle {
  display: block;
  margin-right: auto;
  width: auto;
  height: 400px;
  margin-left: auto;
  
  }


  .logo {
  animation: border-flicker 2s linear infinite;
display: block;
  margin-right: auto;
  width: auto;
  height: 400px;
  margin-left: auto;
  }

@media (max-width: 750px) {
.logo {
 
  margin-right: auto;
  width: auto;
  height: 200px;
  margin-left: auto;
  
  }
}

.countdown > *, .countdown .h1 {
color: white!important;
text-align: center;

}

.drink-container h1, .tc-container h2, .how-container h2 {
text-transform: uppercase!important;
    -webkit-transform: skewX(-20deg);
    transform: skewX(-20deg);
font-weight: 900;
display: flex;
align-items: center;
  justify-content: center;
color: white!important;

}


.how-container > * {
color: black!important;
}

.drink {
border-radius: 6px;
}


.countdown {
margin-left: auto;
margin-right: auto;
width: 300px;
}

@media (max-width: 750px) { 
.countdown {
width: 100%!important;
}
}

.countdown {
font-family: 'Montserrat', sans-serif;
font-weight: 800;
text-transform: uppercase;
}

.countdown .days, .hours, .min, .sec {
display: block;
font-style: italic;
-webkit-transform: skewX(-20deg);
    transform: skewX(-20deg);
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

{%endstyle%}
