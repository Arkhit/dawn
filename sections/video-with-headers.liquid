{% assign background_color = "bg-" | append: section.settings.background_color %}

<div class="video-with-header {{background_color}}">
  {% if section.settings.heading != blank or section.settings.subheading != blank %}
    {% render 'headings' %}
  {% endif %}

  <div class="video-container">
    <div class="iframe-container">
      <iframe src="{{ section.settings.video }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </div>

</div>
{% schema %}
  {
    "name": "Video with Headers",
    "settings": [
      {
        "type": "select",
        "id": "background_color",
        "label": "Background Color",
        "default": "white",
        "options": [
          {
            "value": "white",
            "label": "White"
          }, {
            "value": "lighter-blue",
            "label": "Blue"
          }
        ]
      }, {
        "id": "video",
        "type": "url",
        "label": "Video Url"
      }, {
        "id": "heading",
        "type": "text",
        "label": "Heading",
        "default": "Title"
      }, {
        "id": "subheading",
        "type": "text",
        "label": "Subheading",
        "default": "Sub Title"
      }
    ],
    "presets": [
      {
        "name": "Video with Headers",
        "category": "Image"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .video-with-header {
    margin-bottom: 90px;
    height: auto;
  }
  .video-container {
    width: 65%;
    margin: auto;
  }
  .iframe-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    height: 0;
  }
  .iframe-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* MEDIA QUERIES */

  @media(max-width: 1280px) {
    .video-container {
      width: 85%;
      margin: auto;
    }
  }
{% endstylesheet %}