    ],
    "blocks": [
      {
        "name": "Image",
        "type": "card",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "image_title",
            "label": "Title"
          }, {
            "type": "textarea",
            "id": "image_text",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Carousel",
        "category": "Image"
      }
    ]
  }
{% endschema %}
  
<script>
  $(".slick-carousel", ".img-carousel").slick({
    speed: 1000,
    autoplay: true,
    autoplaySpeed: 2500,
    cssEase: 'ease',
    slidesToShow: 3,
    slidesToScroll: 1,
    infinite: true,
    swipeToSlide: true,
    centerMode: false,
    arrows: true,
    responsive: [
      {
        breakpoint: 992,
        settings: {
          slidesToShow: 2,
          dots: true
        }
      }, {
        breakpoint: 750,
        settings: {
          slidesToShow: 1,
          dots: true
        }
      }
    ]
  });
</script>