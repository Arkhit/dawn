{% comment %}This is some styling for the variant images under each product used on collection pages and search{% endcomment %}
.product-groups__images img {width: 60px;}
.product-groups__images a:hover img {border:  solid 1px black;}
@media screen and (max-width: 798px){.product-groups__images img {width: 40px;}}

{% comment %}styling of the Klaviyo back in stock button / text {% endcomment %}
a.klaviyo-bis-trigger {color: #4E4E4E;}

{% comment %}Styling of the menu in the header {% endcomment %}
details-disclosure>details {position: static;}
ul.list-menu.list-menu--inline {position: relative;
  ul.header__submenu.list-menu.list-menu--disclosure {
    width: 100%;
    columns: 3;
    >li {
      width: 33.333333%;
      display: inline;
      svg.icon.icon-caret {display: none;}
      ul.header__submenu.list-menu {
        background: none;
        padding-top: 0;
        margin-top: 0;
      }
    }
  }
}

ul.header__submenu.list-menu.list-menu--disclosure>li {
  >div>a.header__menu-item.link.link--text.list-menu__item, >a.header__menu-item.link.link--text.list-menu__item {
    font-weight: bold;
    font-size: 1.5rem;
  }
  ul.header__submenu.list-menu a.header__menu-item.link.link--text.list-menu__item {
    color: black;
    padding: 10px 20px 0;
    &:hover {color: #555;}
  }
}

{% comment %}support for mobile AND desktop image upload for the image banner section{% endcomment %}
a.banner__media.media>img {
  &.mob {@media screen and (min-width: 750px) {display: none;}}
  &.dt {@media screen and (max-width: 749px) {display: none;}}
}

{% comment %}Used for showing variant images instead of buttons for choosing color variant{% endcomment %}
.product-form__input input[type='radio'] + label.color {
  padding: 0;
  overflow: hidden;
  border-color: transparent;
  >img {max-width: 59px;}
}
