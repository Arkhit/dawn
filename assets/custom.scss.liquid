/* @group PRODUCT PAGE - PRODUCT GROUPS */
.product-groups__images img {width: 60px;}
.product-groups__images a.current-product-image img {
  border:  solid 1px black;
  border-bottom: 4px solid black;
}
.product-groups__images a:hover img {border:  solid 1px black;}
.product-groups__titles {
  text-transform: uppercase;
  font-size: 12px;
  height: 14px;
  margin-bottom: 20px;
}
.product-label {display: none;}
/* @end */
@media screen and (max-width: 798px){.product-groups__images img {width: 40px;}}


a.klaviyo-bis-trigger {
  color:#4E4E4E;
}

.pro-var-lable-img {
	background-size: contain;
    background-repeat: no-repeat;
    width: 42px;
    height: 42px;
    border-radius: 100% !important;
    display: inline-block !important;
    background-color: transparent !important;
    border: 1px solid #4e4e4e !important;
  	opacity: 0.4;
}

.product-form__input input[type=radio]:checked+label.pro-var-lable-img {
	opacity: 1;
  	box-shadow: 0 0 0 2px rgb(255,255,255,0.4), 0 0 0 3px #ffaa91;
}