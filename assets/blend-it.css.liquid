@font-face {
    font-family: 'TrimPosterWebCompressed';
    src: url("{{ 'TrimPosterWebCompressed.woff' | asset_url }}") format('woff'),
    url("{{ 'TrimPosterWebCompressed.ttf' | asset_url }}") format('truetype'),
    url("{{ 'TrimPosterWebCompressed.otf' | asset_url }}") format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'NanumPenScript';
    src: url("{{ 'NanumPenScript-Regular.ttf' | asset_url }}") format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Raleway-Thin';
    src: url("{{ 'Raleway-Thin.ttf' | asset_url }}") format('truetype');
}

@font-face {
    font-family: 'Raleway-Bold';
    src: url("{{ 'Raleway-Bold.ttf' | asset_url }}") format('truetype');
}


.container {
    display: flex;
    align-items: center;
    position: relative;
    padding: 40px 40px 0px 40px;
    margin-top: 60px;
}

.step-container {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-top: 20px;
}

.step-label {
    border-radius: 50px;
    padding: 5px 15px;
    font-family: 'NanumPenScript', sans-serif;
    font-size: 16px;
    transform: rotate(-05deg);
    margin-right: 10px;
    position: absolute;
    top: -40px;
    left: -40px;
    font-size: 36px;
    min-width: 153px;
    text-align: center;
    color:black;
}

.title {
    font-family: 'TrimPosterWebCompressed', sans-serif;
    color: black;
    font-size: 36px;
    text-transform: uppercase;
    margin: 0;
    z-index: 5;
    font-size: 100px;
    letter-spacing: 1px;
    line-height: 1;
}

.blend-container{
    max-width: 990px;
    margin: 0 auto;
}

.blend-description{
    margin-left: 40px;
    margin-top: 0;
    max-width: 58ch;
    font-family: 'Raleway-Thin', sans-serif;
    font-size: 18px;
    color: black;
    font-weight: 700;
}

.blend-dots{
    display: flex;
    align-items: center;
    min-height: 60px;
    margin-left: 40px;
    /* width: 100%; */
    max-width: 485px;
    overflow-x: hidden;
}

.blend-bold{
    font-family:'Raleway-Bold', sans-serif; 
    font-weight: 700; 
    font-size: 20px;
    margin-top: 10px;
}

.blend-span{
    font-family: "Raleway", sans-serif;
    font-weight: 400;
    font-size: 18px;
    line-height: 28px;
    color: #000000;
    text-decoration: underline;
    transition: text-decoration-style 0.2s;
    text-underline-offset: 5px;
    cursor: pointer;
}

.blend-span:hover{
    transition: text-decoration-style 0.2s;
    text-decoration-style: wavy;
}

.control-button{
    background-color: #000000;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 40px;
    width: 40px !important;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
}

.control-button img{
    width: 20px;
    height: 20px;
}

.blend-container-dots{
    display: flex;
    align-items: center;
    /* max-width: 65%; */
    margin-left: 40px;

}

.blend-dot{
    min-width: 24px;
    min-height: 24px;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background-color: black;
    margin-right: 10px;
    transition: all 0.3s;
    margin-right: 30px;
}

.blend-dot:hover{
    cursor: pointer;
    transition: all 0.3s;
    width: 60px;
    height: 60px;
    min-width: 60px;
    min-height: 60px;
}

.blend-dot.active{
    cursor: pointer;
    transition: all 0.3s;
    min-width: 60px;
    min-height: 60px;
    width: 60px;
    height: 60px;
}

.blend-input{
    display: flex;
    max-width: 65%;
    align-items: flex-end;
}

@media (max-width: 768px) {
    .blend-input{
        flex-direction: column;
        max-width: 100%;
        justify-content: flex-start;
        padding: 0px 20px 0 20px;
    }
    .blend-input input{
        font-size: 16px !important;
        margin-left: 40px !important;
        width: Calc(100% - 20px) !important;
    }

    .blend-description-mobile{
        max-width: unset !important;
        margin-left: 20px !important;
   
    }
}

.blend-input input{
    width: 100%;
    padding: 10px;
    font-size: 30px;
    font-family: "Nanum Pen Script", cursive;
    font-weight: 300;
    font-style: normal;
    border: none;
    border-bottom: 2px dotted black;
    margin-top: 10px;
    margin-left: 30px;
    max-height: 62px;
    outline: none;
    box-shadow: none;
}

.blend-input input::placeholder{
    color:#cccccc;
}

.blend-button{
    margin-left: 40px;
}

.blend-button button{
    width: 100%;
    max-width: 65%;
    margin-bottom: 20px;
    padding: 20px;
    border: none;
    outline: none;
    box-shadow: none;
    cursor: pointer;
    border-radius: 12px;
    font-family: 'Raleway-Bold', sans-serif;
    background-color: #199776;
    transition: all 0.3s;
    color:white;
    font-size: 24px;
}

.blend-button button:hover{
    transition: all 0.3s;
    background-color: #237f5e;
}

.blend-button button:disabled{
    background: #cccccc;
    color: #666666;
}

/* flavour css */
.flavour-container {
    display: flex;
    align-items: center;
    margin-left: 40px;
    margin-top: 20px;
    position: relative;
    width: 300px;
}

.flavour-image-container img{
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background-size: 100% ;
    background-position: center;
    animation: backgroundZoom 7s ease forwards; 

}

.flavour-image-container{
    display: flex;
    align-items: center;
    position: relative;
    
}

.flavour-orb{
    position: absolute;
    width: 180px;
    height: 180px;
    border-radius: 50%;
    z-index: 5;
    bottom: -66px;
    left: 175px;
    opacity: 0.95;
    transition: all 1.4s;
}

.flavour-image-container img{
    overflow: hidden;

}

.flavour-detials{
    min-width: 354px;
    position: relative;
    background: #fafafa;
    z-index: 20;
    padding: 18px 100px 18px 20px;
    border-radius: 16px;

    position: absolute;
    left:87%;
}

.flavour-name{
    font-family: "Raleway", sans-serif;
    font-size: 24px;
    margin: 6px;
    font-weight:700;
    color:black;
    line-height: 28px;
    
}

.flavour-controls{
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    width: max-content;
    position: absolute;
    bottom: 5px;
    left: 75%;
}

.flavour-control-value{
    display: block;
    font-family: "Raleway", sans-serif;
    font-size: 20px;
    margin: 12px 0 ;
    font-weight:700;
    color:black;
    line-height: 28px;
}

.flavour-control{
    width: 80px;
    height: 80px;
    background: #cccccc;
    font-size: 44px;
    color:#666666;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
}

.flavour-control.valid{
    background: #000000;
    color:white;
}

.flavour-description{
    font-family: "Raleway", sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 18px;
    margin: 6px;
}

.mobile-control-set{
    /* padding-top:12px; */
}

@media screen and (max-width: 1024px) {
    
    .flavour-control-value{
        margin: 18px 0;
    }

    .flavour-controls{
        background: #fafafa;
        padding: 4px;
        border-radius: 12px;
    }

    .blend-container-dots{
        max-width: 59%;
    }

    .flavour-detials{
        left: 0;
        bottom: -52px;
        width: 100%;
        padding: 18px 20px 18px 20px;

        min-width: 500px;
        min-height: 156px;
    }

    .flavour-description{
        max-width: 49ch;
    }

    .flavour-controls{
        left: 82%;
    }
    
    .mobile-control-set{
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
        flex-direction: column-reverse;
    }

    .mobile-control-set:last-child{
        margin-top: 12px;
    }

    .blend-dot:hover{
        width: 40px;
        height: 40px;
        min-width: 40px;
        min-height: 40px;
    }
    
    .blend-dot.active{
        min-width: 40px;
        min-height: 40px;
        width: 40px;
        height: 40px;
    }

    .blend-dot{
        width: 16px;
        height: 16px;
        min-width: 16px;
        min-height: 16px;
    }

    .flavour-orb{
        bottom: 50px;
        left: 195px;
        transition: all 1.4s;
    }
}

@media screen and (max-width: 767px) {
    .flavour-detials{
        max-width: 428px;
        min-width: 298px;
        width: Clamp(298px, 100%, 428px);
    }

    .flavour-description{
        max-width: 17rem;
    }
    .flavour-controls{
        left: 75%;
    }
    .flavour-name{
        max-width: 17rem;
    }

    .flavour-orb{
        bottom: 10%;
        left: -30%;
    }
}

@keyframes backgroundZoom {
    0% {
        background-size: 120%;
    }
    100% {
        background-size: 100%;
    }
}