@import url('https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700&display=swap'); 

.find-image1 img, .find-image2 img, .find-image3 img {
    width: 100%;
    height: auto;
}

.find-image1, .find-image2, .find-image3 {
    display: inline-block;
    width: 100%;
    margin: 10px 0;
    max-width: 600px;
    transform: rotate(20deg);
    transition: transform 0.6s;
}

.find-image1 {
    display: none;
}

.find-image2 {
    display: none;
}

.find-image3 {
    width: 25vw;
    position: absolute;
    top: 0;
    right: 4vw;
    z-index: 3;
}

@media only screen and (min-width: 600px) {
    
    .find-image1 {
        position: absolute;
        display: block;
        width: 30vw;
        top: -10vw;
        right: 5%;
        z-index: 2;
        transform: rotate(-20deg);
    }
    
    .find-image2 {
        position: absolute;
        display: block;
        width: 20vw;
        top: -4vw;
        right: calc(20vw - 50px);
        z-index: 3;
    }

    .find-image3 {
        right: 5vw;
        top: 2vw;
    }
    
}

@media only screen and (min-width: 1064px) {
    
    .find-image1 {
        width: 400px;
        top: -15%;
        left: -65%;
        right: auto;
    }
    
    .find-image1:hover {
        transform: rotate(-19deg);
    }
    
    .find-image2 {
        width: 250px;
        top: 4%;
        right: 2%;
    }
    
    .find-image2:hover {
        transform: rotate(19deg);
    }

    .find-image3 {
        width: 264px;
        top: 10%;
        right: 5%;
    }
    


