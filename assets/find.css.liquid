span.decorative {
    display: block;
    position: absolute;
    overflow: hidden;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

span.decorative:after {
    content: '';
    position: absolute;
    display: block;
    border-radius: 50%;
    opacity: 0.95;
    z-index: 1;
}

.simple span.decorative:after {
    width: 20vw;
    height: 20vw;
    top: 80%;
    left: -10%;
}

.medium span.decorative:after {
    width: 30vw;
    height: 30vw;
    bottom: 45%;
    left: -40%;
}

.complex span.decorative:after {
    width: 40vw;
    height: 40vw;
    top: 30%;
    left: 20%;
}

