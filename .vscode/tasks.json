{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile Sass and Minify JS",
        "type": "shell",
        "command": "npx",
        "args": ["gulp"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "options": {
          "cwd": "${workspaceFolder}"  // プロジェクトフォルダをカレントディレクトリに設定
        }
      },
      {
        "label": "Shopify CLI - 開発サーバー起動",
        "type": "shell",
        "command": "shopify",
        "args": ["theme", "dev", "--store", "mikihousetest.myshopify.com"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Shopify CLI - Pull Theme",
        "type": "shell",
        "command": "shopify",
        "args": ["theme", "pull"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Shopify CLI - Push Theme",
        "type": "shell",
        "command": "shopify",
        "args": ["theme", "push"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Git Pull",
        "type": "shell",
        "command": "git",
        "args": ["pull", "origin", "main"],
        "group": {
            "kind": "build",
            "isDefault": true
        }
      },
      {
        "label": "Git Push",
        "type": "shell",
        "command": "git",
        "args": ["push", "origin", "main"],
        "group": {
            "kind": "build",
            "isDefault": true
        }
      }
    ]
  }