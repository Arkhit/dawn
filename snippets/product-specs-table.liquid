{% comment %}
  Renders specifications table for PDP.
  Accepts:
  - product: {Object} product object.

  Usage:
  {% render 'product-specs-table',  %}
{% endcomment %}

{% assign specifications = product.metafields.custom.specifications.value %}
{% unless specifications.size == 0 %}
  <div>
    <h2 class="text-t-md mb-base">Specifications</h2>

    <table class="border-collapse table-fixed  border-y border-y-grey100">
      <tbody class="block">
        {% for property in specifications -%}
          <tr class="border-b border-b-grey100 flex justify-between w-full">
            <td class="py-7 text-black text-body-sm leading-5 bases-1/2">
              {{ property.first | capitalize -}}
            </td>
            <td class="py-7 text-black text-body-sm leading-5 bases-1/2">
              {{ property.last }}
            </td>
          </tr>
        {%- endfor %}
      </tbody>
    </table>
  </div>
{% endunless %}
