<!-- Product detail view GTM dataLayer enhanced eCommerce event -->
<script type="text/javascript" defer="defer">
  console.log('adding productView to cart GTM datalayer')
  var product = {{ product | json }}
  var cart = {{ cart | json }}

    if (product.variants.length > 1){
  for (var i = 0; i< product.variants.length; i++){
        variant = product.variants[i]
        if (variant.public_title == document.querySelector(".selected-val").innerText){
          var chosen_title = variant.public_title
          var chosen_sku = variant.sku
          var chosen_name = variant.name
        }
      }
    } else {
          var chosen_title = product.variants[0].public_title
          var chosen_sku = product.variants[0].sku
          var chosen_name = product.variants[0].name
    }
      window.dataLayer = window.dataLayer || []
      window.dataLayer.push({ecommerce: null})
      window.dataLayer.push({
          'event': 'viewProduct',
          'ecommerce': {
            'currencyCode': cart.currency,
            'detail': {
              'products': [{
                'name': chosen_name,
                'id': chosen_sku,
                'price': product.price / 100,
                'brand': product.vendor,
                'category': product.type,
                'variant': chosen_title,
                'quantity': 1
              }]
            }
          }
        })
</script>

<!-- Add to cart GTM dataLayer enhanced eCommerce event -->
<script type="text/javascript" defer="defer">
  console.log('adding add to cart GTM datalayer')
  var product = {{ product | json }}
  var cart = {{ cart | json }}

  var addToCart = document.querySelector('button[name=add]')
  var attach = function() {
    addToCart.addEventListener("click", function(event) {
      window.dataLayer = window.dataLayer || []
      window.dataLayer.push({ecommerce: null})
      window.dataLayer.push({
        'event': 'addToCart',
        'ecommerce': {
            'currencyCode': cart.currency,
            'add': {
              'products': [{
                'name': chosen_name,
                'id': chosen_sku,
                'price': product.price / 100,
                'brand': product.vendor,
                'category': product.type,
                'variant': chosen_title,
                'quantity': 1
              }]
          }
        }
      })
    })
  }

  var tryAttaching = function() {
    addToCart = document.querySelector('button[name=add]')
    if(addToCart) {
      attach()
    } else {
      setTimeout(tryAttaching, 1)
    }
  }

  tryAttaching()
</script>
