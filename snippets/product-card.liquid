{% comment %}
  Renders a product related product.

  Accepts:
  - product: {Object} Product liquid object

  Usage:
  {% render 'product-card' product:product %}
{% endcomment %}

{% assign image_src = product.images.first.src | default: 'https://placehold.co/288' %}
{% assign product_brand = product.brand | default: 'Victas' %}
{% assign product_title = product.title | default: '' %}

<div class="p-base">
  <div class="w-[167px] h-[167px] desktopUp:w-[288px] desktopUp:h-[288px] mb-base">
    <div class="w-full flex justify-center items-center">
      {% if product.images.size > 0 %}
        <img
          src="{{ image_src | image_url: width: 288 }}"
          class="w-full h-full"
          alt="{{ media.alt | escape }}"
          width=""
          height=""
          loading="lazy"
          aria-label="Go to slide {{forloop.index}}"
        >
      {% else %}
        <p>No images available for this product.</p>
      {% endif %}
    </div>
  </div>

  <div class="w-full flex flex-col gap-mini">
    <h3 class="text-body-xs text-grey500 leading-4">
      {{ product_brand }}
    </h3>

    <h1 class="text-body-xs leading-4 text-black">
      {{ product_title }}
    </h1>

    {% render 'price-b' %}
  </div>
</div>
