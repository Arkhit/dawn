  }

  input[type='number']::-webkit-outer-spin-button,
  input[type='number']::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  input[type='number']:focus-visible {
    outline: none;
    outline-offset: none;
    box-shadow: none;
  }

  .cart-item__quantity input {
    margin: 0 5px;
  }
</style>
