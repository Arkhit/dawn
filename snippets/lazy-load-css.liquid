  <script>
    (function () {
      const head = document.head;
      const target = document.querySelector('#shopify-section-template--15850025320644__16638542834eee9986');
      const stylesheets = [
        "{{ 'loop-featured-product.css' | asset_url }}",
        "{{ 'component-image-with-text.css' | asset_url }}",
      ];
      const options = {
        root: null,
        threshold: 1.0,
      };

      const intersectionHandler = (entries, observer) => {
        entries.forEach((entry) => {
          console.log(entry.isIntersecting);
          if (entry.isIntersecting) {
            stylesheets.forEach((stylesheet) => {
              const styleTag = document.createElement('link');
              styleTag.rel = 'stylesheet';
              styleTag.href = stylesheet;
              head.append(styleTag);
            });
            observer.unobserve(target);
          }
        });
      };
      const scrollObserver = new IntersectionObserver(intersectionHandler, options);

      scrollObserver.observe(target);
    })();
  </script>
